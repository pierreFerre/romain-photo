{% extends 'back/base.html.twig' %}

{% block title %}Romain Back Office - Détails {{ portfolio.name }}{% endblock %}

{% block body %}
    <h1>{{ portfolio.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ portfolio.id }}</td>
            </tr>
            <tr>
                <th>Nom de la collection</th>
                <td>{{ portfolio.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ portfolio.description }}</td>
            </tr>
            <tr>
                <th>Emplacement</th>
                <td>{{ portfolio.picture }}</td>
            </tr>
            <tr>
                <th>Date de Création</th>
                <td>{{ portfolio.createdAt ? portfolio.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de Modification</th>
                <td>{{ portfolio.updatedAt ? portfolio.updatedAt|date('Y-m-d H:i:s') : '-' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('portfolio_edit', {'id': portfolio.id}) }}">Modifier</a>

    {{ include('back/portfolio/_delete_form.html.twig') }}

    <a href="{{ path('portfolio_read_pictures', {'id': portfolio.id}) }}">Retour à la collection</a>
{% endblock %}
